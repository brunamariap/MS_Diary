// database
datasource db {
    provider = "sqlite"
    url      = "file:database.db"
}

// generator
generator client {
    provider             = "prisma-client-py"
    recursive_type_depth = 5
}

// enum Bimester {
// 	FIRST
// 	SECOND
// 	THIRD
// 	FOURTH
// }

model Grade {
    id           String @id @default(uuid())
    score        Int
    bimester     Int
    disciplineId String
    attributedBy String
    studentId    String
    diaryId      String
    diary        Diary  @relation(fields: [diaryId], references: [id], onDelete: Cascade)
}

model Diary {
    id              String   @id @default(uuid())
    referencePeriod Int
    referenceYear   Int
    startDate       DateTime
    endDate         DateTime
    grade          Grade[]
}
