generator Client {
    provider = "prisma-client-python"
}

datasource test {
    provider = "sqlite"
    url      = "file:./test.db"
}

model Grade {
    id           String @id @default(uuid())
    score        Int
    bimester     Int
    disciplineId String
    attributedBy String
    studentId    String
    diaryId      String
    diary        Diary  @relation(fields: [diaryId], references: [id], onDelete: Cascade)
}

model Diary {
    id              String   @id @default(uuid())
    referencePeriod Int
    referenceYear   Int
    startDate       DateTime
    endDate         DateTime
    grade          Grade[]
}